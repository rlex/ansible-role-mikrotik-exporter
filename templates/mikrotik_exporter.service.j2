{{ ansible_managed | comment }}
[Unit]
Description=Mikrotik exporter
After=network.target

[Service]
Type=simple
User={{ mikrotik_exporter_user }}
Group={{ mikrotik_exporter_group }}
ExecStart=/usr/local/bin/mikrotik_exporter -config-file=/etc/mikrotik_exporter.yml -timeout=10s

SyslogIdentifier=mikrotik-exporter
Restart=always
PrivateTmp=yes
ProtectHome=yes
NoNewPrivileges=yes
ProtectSystem=full

[Install]
WantedBy=multi-user.target
